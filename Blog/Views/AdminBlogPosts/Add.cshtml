@model Blog.Models.ViewModels.AddBlogPost


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New BlogPost - Admin Function</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Heading</label>
            <input type="text" asp-for="Heading" class="form-control" id="heading"/>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Page Title</label>
            <input type="text" asp-for="PageTitle" class="form-control" id="pageTitle"/>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" id="content"></textarea>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Short Description</label>
            <input type="text" asp-for="ShortDescription" class="form-control" id="shortDescription"></input>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Featured Image Upload</label>
            <input type="file" class="form-control" id="featuredImageUpload"></input>
            
            <img src="" id="imageDisplay" class="my-2" style="width: 300px"/>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Featured Image Url</label>
            <input type="text" asp-for="FeaturedImageUrl" class="form-control" id="featuredImageUrl"></input>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Url Handle</label>
            <input type="text" asp-for="UrlHandle" class="form-control" id="urlHandle"></input>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Published Date</label>
            <input type="date" asp-for="PublishedDate" class="form-control" id="publishedDate"></input>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" asp-for="Author" class="form-control" id="author"></input>
        </div>
        
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible">
            <label class="form-check-label">
                Is Visible?
            </label>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Tags</label>
            <select class="form-select" asp-for="SelectTags" asp-items="@Model.Tags">
         
            </select>
        </div>
        
        <div class="mb-3">
            <button class="btn btn-dark" type="submit">
                Add Blog Post
            </button>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        var editor = new FroalaEditor('#content', {
            imageUpload: "/api/Images"
        });
        const imageUpload = document.getElementById('featuredImageUpload');
        const urlImage = document.getElementById('featuredImageUrl');
        const imageDisplay = document.getElementById('imageDisplay');
        
        async function uploadImage(e){
            let data = new FormData();
            data.append("file", e.target.files[0]);
            
            await fetch("/api/Images", {
                method: "POST",
                headers:{
                    "Accept": "*/*"
                },
                body: data
            })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    urlImage.value = data.link;
                    imageDisplay.src = data.link;
                })
                
        }
        
        imageUpload.addEventListener('change', uploadImage)
    </script>
}
