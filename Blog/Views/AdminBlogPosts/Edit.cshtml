@model Blog.Models.ViewModels.EditBlogPost


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Blog Post - Admin Function</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model is not null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" asp-for="Id" class="form-control" id="id" readonly/>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input type="text" asp-for="Heading" class="form-control" id="heading"/>
            </div>

            <div class="mb-3">
                <label class="form-label">Page Title</label>
                <input type="text" asp-for="PageTitle" class="form-control" id="pageTitle"/>
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea asp-for="Content" class="form-control" id="content"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Short Description</label>
                <input type="text" asp-for="ShortDescription" class="form-control" id="shortDescription"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Featured Image Url</label>
                <input type="text" asp-for="FeaturedImageUrl" class="form-control" id="featuredImageUrl"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Url Handle</label>
                <input type="text" asp-for="UrlHandle" class="form-control" id="urlHandle"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Published Date</label>
                <input type="date" asp-for="PublishedDate" class="form-control" id="publishedDate"></input>
            </div>

            <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" asp-for="Author" class="form-control" id="author"></input>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible">
                <label class="form-check-label">
                    Is Visible?
                </label>
            </div>

            <div class="mb-3">
                <label class="form-label">Tags</label>
                <select class="form-select" asp-for="SelectTags" asp-items="@Model.Tags">

                </select>
            </div>

            <div class="mb-3">
                <button class="btn btn-dark" type="submit">
                    Edit Blog Post
                </button>
                <button class="btn btn-danger ms-2" type="submit" asp-action="Delete" asp-controller="AdminBlogPosts" asp-area="">
                    Delete Blog Post
                </button>
            </div>
        </form>
    }
    else
    {
        <p>Post not found!</p>
    }
</div>