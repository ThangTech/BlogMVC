@model Blog.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">
                Bloggie is a personal blogging platform for programmers,
                where you can share knowledge, projects, and coding tips. 
                It features clean code display, categorization by programming languages, 
                and an interactive environment for developers. 
                Bloggie is the perfect tool to both learn and document your programming journey.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/1181449/pexels-photo-1181449.jpeg" alt="Blog"
                 class="d-block mx-lg-auto img-fluid" width="300px"/>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex my-3">
            @if (Model is not null & Model.Tags.Any())
            {
                @foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model is not null && Model.BlogPosts.Any())
            {
                @foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-4 d-block img-fluid"/>
                        
                        <h1 class="mb-4">@blogPost.Heading</h1>
                        <p class="mb-4">
                            Author: @blogPost.Author
                            <br/>
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-2">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-4">@blogPost.ShortDescription</p>
                        <a class="btn btn-dark" asp-action="Index" asp-area="" asp-controller="Blogs" asp-route-url="@blogPost.UrlHandle">
                            Read more
                        </a>
                    </div>
                }
            }
            else
            {
                <p class="text-danger">No image URL available</p>
            }
        </div>
    </div>
</div>